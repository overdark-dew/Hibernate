<hibernate-mapping>
	<class name="Tables.User" table="users">

		<id column="user_id" name="id" type="java.lang.Integer">
			<generator class="increment" />
		</id>

		<property column="name" name="name" type="java.lang.String" />

		<set name="orders" lazy="false">
			<key column="user_id" />
			<one-to-many class="Tables.Order" />
		</set>

	</class>
</hibernate-mapping>